<!-- Layout con Header Superior y Sidebar Colapsable -->
<div class="flex flex-col h-screen bg-gray-50">
  <!-- Header Superior (Full Width) -->
  <header
    class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-6 z-30"
  >
    <!-- Left: Hamburger + Logo -->
    <div class="flex items-center gap-4">
      <!-- Hamburger para mobile -->
      <button
        (click)="toggleMobileMenu()"
        class="lg:hidden p-2 -ml-2 rounded-lg hover:bg-gray-100 text-gray-600"
      >
        <lucide-icon [img]="Menu" [size]="20"></lucide-icon>
      </button>

      <!-- Logo Genius Soft -->
      <div class="flex items-center gap-3">
        <div
          class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center"
        >
          <span class="text-white font-bold text-sm">GS</span>
        </div>
        <span class="font-bold text-gray-900 text-lg">Genius Soft</span>
      </div>
    </div>

    <!-- Right: Notifications + User -->
    <div class="flex items-center gap-4">
      <!-- Notifications -->
      <button class="relative p-2 rounded-lg hover:bg-gray-100 text-gray-600">
        <lucide-icon [img]="Bell" [size]="20"></lucide-icon>
      </button>

      <!-- User Avatar + Email -->
      <button
        class="flex items-center gap-2 hover:bg-gray-100 rounded-lg p-1 pr-3"
      >
        <div
          class="w-8 h-8 rounded-full bg-blue-600 flex items-center justify-center"
        >
          <span class="text-white text-xs font-medium">{{ userInitials }}</span>
        </div>
        <span class="hidden sm:block text-sm font-medium text-gray-900">{{
          userName
        }}</span>
      </button>
    </div>
  </header>

  <!-- Container para Sidebar + Content -->
  <div class="flex flex-1 overflow-hidden">
    <!-- Overlay para mobile -->
    @if (isMobileMenuOpen()) {
    <div
      (click)="closeMobileMenu()"
      class="fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden"
    ></div>
    }

    <!-- Sidebar -->
    <aside
      [class.w-64]="isSidebarExpanded()"
      [class.w-16]="!isSidebarExpanded()"
      [class.-translate-x-full]="!isMobileMenuOpen()"
      [class.translate-x-0]="isMobileMenuOpen()"
      class="fixed lg:static inset-y-0 left-0 top-16 z-50 bg-white border-r border-gray-200 transition-all duration-300 ease-in-out flex flex-col lg:translate-x-0"
    >
      <!-- Toggle Button (solo desktop) -->
      <div
        class="h-12 items-center justify-center border-b border-gray-200 hidden lg:flex"
      >
        <button
          (click)="toggleSidebarExpansion()"
          class="flex items-center justify-center w-8 h-8 rounded-lg hover:bg-gray-100 text-gray-600"
        >
          <lucide-icon
            [name]="isSidebarExpanded() ? 'chevron-left' : 'chevron-right'"
            [size]="20"
          ></lucide-icon>
        </button>
      </div>

      <!-- Navigation -->
      <nav class="flex-1 px-2 py-4 space-y-1 overflow-y-auto">
        <a
          routerLink="/signature"
          routerLinkActive="bg-gray-100"
          [routerLinkActiveOptions]="{ exact: true }"
          (click)="closeMobileMenu()"
          [class.justify-center]="!isSidebarExpanded()"
          [class.justify-start]="isSidebarExpanded()"
          class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors group relative"
          [title]="!isSidebarExpanded() ? 'Home' : ''"
        >
          <lucide-icon
            name="home"
            [size]="20"
            class="flex-shrink-0"
          ></lucide-icon>
          @if (isSidebarExpanded()) {
          <span class="font-medium text-sm">Home</span>
          }
        </a>

        <a
          routerLink="/signature/contratos"
          routerLinkActive="bg-gray-100"
          (click)="closeMobileMenu()"
          [class.justify-center]="!isSidebarExpanded()"
          [class.justify-start]="isSidebarExpanded()"
          class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors group relative"
          [title]="!isSidebarExpanded() ? 'Orders' : ''"
        >
          <lucide-icon
            name="package"
            [size]="20"
            class="flex-shrink-0"
          ></lucide-icon>
          @if (isSidebarExpanded()) {
          <span class="font-medium text-sm">Orders</span>
          <lucide-icon
            name="chevron-right"
            [size]="16"
            class="ml-auto flex-shrink-0"
          ></lucide-icon>
          }
        </a>

        <a
          [class.justify-center]="!isSidebarExpanded()"
          [class.justify-start]="isSidebarExpanded()"
          class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors group relative"
          [title]="!isSidebarExpanded() ? 'Inventory' : ''"
        >
          <lucide-icon
            name="package"
            [size]="20"
            class="flex-shrink-0"
          ></lucide-icon>
          @if (isSidebarExpanded()) {
          <span class="font-medium text-sm">Inventory</span>
          <lucide-icon
            name="chevron-right"
            [size]="16"
            class="ml-auto flex-shrink-0"
          ></lucide-icon>
          }
        </a>

        <a
          [class.justify-center]="!isSidebarExpanded()"
          [class.justify-start]="isSidebarExpanded()"
          class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors group relative"
          [title]="!isSidebarExpanded() ? 'Clients' : ''"
        >
          <lucide-icon
            name="users"
            [size]="20"
            class="flex-shrink-0"
          ></lucide-icon>
          @if (isSidebarExpanded()) {
          <span class="font-medium text-sm">Clients</span>
          <lucide-icon
            name="chevron-right"
            [size]="16"
            class="ml-auto flex-shrink-0"
          ></lucide-icon>
          }
        </a>

        <a
          [class.justify-center]="!isSidebarExpanded()"
          [class.justify-start]="isSidebarExpanded()"
          class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors group relative"
          [title]="!isSidebarExpanded() ? 'Price Requests' : ''"
        >
          <lucide-icon
            name="dollar-sign"
            [size]="20"
            class="flex-shrink-0"
          ></lucide-icon>
          @if (isSidebarExpanded()) {
          <span class="font-medium text-sm">Price Requests</span>
          <lucide-icon
            name="chevron-right"
            [size]="16"
            class="ml-auto flex-shrink-0"
          ></lucide-icon>
          }
        </a>

        <a
          [class.justify-center]="!isSidebarExpanded()"
          [class.justify-start]="isSidebarExpanded()"
          class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors group relative"
          [title]="!isSidebarExpanded() ? 'Dashboards' : ''"
        >
          <lucide-icon
            name="bar-chart-3"
            [size]="20"
            class="flex-shrink-0"
          ></lucide-icon>
          @if (isSidebarExpanded()) {
          <span class="font-medium text-sm">Dashboards</span>
          <lucide-icon
            name="chevron-right"
            [size]="16"
            class="ml-auto flex-shrink-0"
          ></lucide-icon>
          }
        </a>

        <a
          [class.justify-center]="!isSidebarExpanded()"
          [class.justify-start]="isSidebarExpanded()"
          class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors group relative"
          [title]="!isSidebarExpanded() ? 'Configuration' : ''"
        >
          <lucide-icon
            name="settings"
            [size]="20"
            class="flex-shrink-0"
          ></lucide-icon>
          @if (isSidebarExpanded()) {
          <span class="font-medium text-sm">Configuration</span>
          <lucide-icon
            name="chevron-right"
            [size]="16"
            class="ml-auto flex-shrink-0"
          ></lucide-icon>
          }
        </a>

        <a
          [class.justify-center]="!isSidebarExpanded()"
          [class.justify-start]="isSidebarExpanded()"
          class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors group relative"
          [title]="!isSidebarExpanded() ? 'Credit Terms' : ''"
        >
          <lucide-icon
            name="credit-card"
            [size]="20"
            class="flex-shrink-0"
          ></lucide-icon>
          @if (isSidebarExpanded()) {
          <span class="font-medium text-sm">Credit Terms</span>
          }
        </a>
      </nav>

      <!-- Footer Actions -->
      <div class="border-t border-gray-200 p-2 space-y-1">
        <button
          [class.justify-center]="!isSidebarExpanded()"
          [class.justify-start]="isSidebarExpanded()"
          class="w-full flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors"
          [title]="!isSidebarExpanded() ? 'English' : ''"
        >
          <lucide-icon
            name="globe"
            [size]="20"
            class="flex-shrink-0"
          ></lucide-icon>
          @if (isSidebarExpanded()) {
          <span class="font-medium text-sm">English</span>
          }
        </button>

        <button
          (click)="onLogout()"
          [class.justify-center]="!isSidebarExpanded()"
          [class.justify-start]="isSidebarExpanded()"
          class="w-full flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors"
          [title]="!isSidebarExpanded() ? 'Log Out' : ''"
        >
          <lucide-icon
            name="log-out"
            [size]="20"
            class="flex-shrink-0"
          ></lucide-icon>
          @if (isSidebarExpanded()) {
          <span class="font-medium text-sm">Log Out</span>
          }
        </button>
      </div>
    </aside>

    <!-- Main Content Area -->
    <div class="flex-1 flex flex-col min-w-0 overflow-auto">
      <!-- Page Content -->
      <main class="flex-1 p-6">
        <ng-content></ng-content>
      </main>
    </div>
  </div>
</div>
