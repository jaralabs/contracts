{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "design-system",
  "sourceRoot": "libs/design-system/src",
  "projectType": "library",
  "prefix": "lib",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/libs/design-system"],
      "options": {
        "project": "libs/design-system/ng-package.json",
        "watch": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/design-system"],
      "options": {
        "jestConfig": "libs/design-system/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "libs/design-system/**/*.ts",
          "libs/design-system/**/*.html"
        ]
      }
    }
  }
}
